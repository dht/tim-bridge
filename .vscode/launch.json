{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug src/index.js",
      "program": "${workspaceFolder}/src/index.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "runtimeArgs": [
        "--enable-source-maps"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
